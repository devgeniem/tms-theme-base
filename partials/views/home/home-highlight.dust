{?highlight}
    <div class="highlight-article columns is-desktop is-gapless">
        {?highlight.featured_image}
            <div class="highlight-article__image-container column is-6-desktop is-7-widescreen is-relative">
                <div
                    class="highlight-article__image is-absolute-desktop has-top-0-desktop has-right-0-desktop has-bottom-0-desktop has-left-0-desktop has-background-cover" {@inlinebg id=highlight.featured_image size="large" /}>
                    <div class="js-object-fit-image-container has-height-100">
                        {@image id=highlight.featured_image size="fullhd" class="objectfit-image is-block" /}
                    </div>
                </div>
            </div>
        {/highlight.featured_image}

        {?highlight.api_image_url}
            <div class="highlight-article__image-container column is-6-desktop is-7-widescreen is-relative">
                <div
                    class="highlight-article__image is-absolute-desktop has-top-0-desktop has-right-0-desktop has-bottom-0-desktop">
                    <div class="js-object-fit-image-container has-height-100">
                        <img class="objectfit-image is-block" src="{highlight.api_image_url|url}" loading="lazy"/>
                    </div>
                </div>
            </div>
        {/highlight.api_image_url}

        <div class="column is-6-desktop is-5-widescreen has-background-secondary has-text-secondary-invert">
            <div class="highlight-article__fields p-5 pt-9-desktop pr-6-desktop pb-9-desktop pl-6-desktop">
                {?highlight.post_title}
                    <h2 class="mt-0 mt-3-desktop mb-4 mb-5-desktop">
                        <a href="{highlight.permalink}" class="has-text-black">
                            {highlight.post_title|s}
                        </a>
                    </h2>
                {/highlight.post_title}

                {?highlight.category}
                    <a href="{category.permalink|s}" class="pill {category_link_classes}">
                        {highlight.category.name|s}
                    </a>
                {/highlight.category}

                <div class="entry__excerpt mt-4 mt-5-desktop mb-5-desktop">
                    <span class="is-block has-text-weight-bold">{@strtodate value=highlight.post_date /}</span>
                    {highlight.excerpt|s}
                </div>
            </div>
        </div>
    </div>
{/highlight}
